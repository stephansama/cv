		"email": "stephanrandle@hotmail.com",
		"url": "https://stephansama.info/"
	},
	"type": "module",
	"scripts": {
		"build:convert": "tsx ./scripts/convert.ts",
		"build:cv": "tsx ./scripts/rendercv.ts",
		"build:www": "resume export $npm_package_config_output --theme=$npm_package_config_theme",
		"dev:convert": "tsx watch ./scripts/convert.ts",
		"dev:cv": "tsx watch ./scripts/rendercv.ts",
		"dev:www": "resume serve --theme=$npm_package_config_theme",
		"lint": "resume validate",
		"prepare": "husky",
		"release": "auto shipit"
	},
	"config": {
		"output": "index.html",
		"theme": "github-styled"
	},
	"dependencies": {
		"@auto-it/conventional-commits": "^11.3.6",
		"@auto-it/git-tag": "^11.3.6",
		"auto": "^11.3.6",
		"jsonresume-theme-github-styled": "^1.3.3",
		"resume-cli": "^3.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@commitlint/types": "^20.2.0",
		"@types/node": "^25.0.3",
		"husky": "^9.1.7",
		"json-refs": "^3.0.15",
		"json-schema-to-zod": "^2.7.0",
		"lint-staged": "^16.2.7",
		"oxlint": "^1.35.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-packagejson": "^2.5.20",
		"tsx": "^4.21.0",
		"yaml": "^2.8.2",
		"zod": "^4.2.1"
	},
	"packageManager": "pnpm@10.13.1"
}
